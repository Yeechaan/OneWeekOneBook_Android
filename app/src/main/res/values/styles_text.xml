<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Custom.Text" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="backgroundTint">@color/colors_text_background</item>
        <item name="boxBackgroundColor">@color/colors_text_background</item>
        <item name="boxStrokeColor">@color/colors_text_border</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="errorEnabled">true</item>
        <item name="android:textAppearance">@style/TextAppearance.Custom.Body3</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="Widget.Custom.Text.Search.Front" parent="Widget.Custom.Text">
        <item name="startIconTint">?attr/colorOnSurface</item>
        <item name="errorEnabled">false</item>
    </style>


    <style name="TextAppearance.Custom.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="TextAppearance.Custom.Body2" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Custom.Body3" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Custom.Body4" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Custom.Body5" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Custom.Body6" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>


    <style name="TextAppearance.Custom.Body1.Bold" parent="TextAppearance.Custom.Body1">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Custom.Body2.Bold" parent="TextAppearance.Custom.Body2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Custom.Body3.Bold" parent="TextAppearance.Custom.Body3">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Custom.Body4.Bold" parent="TextAppearance.Custom.Body4">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Custom.Body5.Bold" parent="TextAppearance.Custom.Body5">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Custom.Body6.Bold" parent="TextAppearance.Custom.Body6">
        <item name="android:textStyle">bold</item>
    </style>

</resources>